{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@store/*": ["app/core/store/*"],
      "@spinners": ["app/shared/spinners/index"],
      "@authState/*": ["app/core/store/auth/index"],
      "@configState/*": ["app/core/store/config/index"],
      "@products/*": ["app/core/store/products/index"],
      "@environments/*": ["environments/*"],
      "@directives": ["app/shared/directives/index"],
      "@pipes": ["app/shared/pipes/index"],
      "@stripe/*": ["app/shared/interfaces/stripe/*"],
      "@services/*": ["app/core/services/*"],
      "@auth": ["app/core/services/auth/index"],
      "@interfaces": ["app/shared/interfaces/index"],
      "@components": ["app/shared/components/index"],
      "@shared/*": ["app/shared/*"],
      "@core/*": ["app/core/*"],
      "@env/*": ["environments/*"],
      "@app/*": ["app/*"]
    }
  }
}
